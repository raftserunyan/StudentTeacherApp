@model IEnumerable<Teacher>

@{
	ViewData["Title"] = "Home Page";
}

<div class="container">
	<div class="d-flex justify-content-between mb-3">
		<h1 class="d-inline">Teachers</h1>
		<a class="btn btn-lg btn-warning col-sm-1 d-flex justify-content-center" asp-controller="Teacher" asp-action="Add">
			<i class="fa fa-plus fa-2x"></i>
		</a>
	</div>

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Students</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td><a href="#" class="btn btn-primary">View Students</a></td>
				</tr> 
			}
		</tbody>
	</table>
</div>

<div>
	@Html.Partial("_AddTeacher.cshtml")
</div>