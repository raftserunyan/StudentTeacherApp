@model Teacher

@{
	Layout = null;
}


<div class="container">

	<form asp-controller="Teachers" asp-action="Add" method="post">
		<div class="form-group">
			<label>Name</label>
			<input class="form-control" type="number" asp-for="Name" placeholder="Ex: Antonio" />
		</div>

		<div class="form-group">
			<input type="submit" value="Add" />
		</div>

	</form>
</div>
