@model Teacher

@{
	Layout = null;
}

<div id="AddTeacherModal" class="modal" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Add a new teacher</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="container">
					<form asp-controller="Teacher" asp-action="Add" method="post">
						<div class="form-group">
							<label>Name</label>
							<input class="form-control" type="text" asp-for="Name" placeholder="Ex: Antonio" />
						</div>

						<div class="form-group d-flex justify-content-center">
							<input type="submit" value="Add" class="btn btn-primary col-sm-2" />
						</div>

					</form>
				</div>
			</div>
			
		</div>
	</div>
</div>


