@model Student

@{
	Layout = null;
}

<div class="modal-dialog" role="document">
	<div class="modal-content">
		<div class="modal-header">
			<h5 class="modal-title">Edit student</h5>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div class="modal-body">
			<div class="container">
				<form asp-controller="Students" asp-action="Edit" method="post">
					<input type="number" asp-for="Id" value="@Model.Id" hidden />
					<input type="number" asp-for="TeacherId" value="@Model.TeacherId" hidden />

					<div class="form-group">
						<label>Name</label>
						<input class="form-control" type="text" asp-for="Name" value="@Model.Name" />
					</div>

					<div class="form-group d-flex justify-content-center">
						<input type="submit" value="Save" class="btn btn-primary col-sm-2" />
					</div>
				</form>
			</div>
		</div>

	</div>
</div>
